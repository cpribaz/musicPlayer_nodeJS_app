<div>
    <label>Name</label>
    <input type="text" name="name" value="<%= track.track_title %>">
</div>
<div>
    <label>Artist</label>
    <select name="artist">
    <% artists.forEach(artist => { %>
        <% if (artist.id === track.artist) { %>
            <option selected label="<%= artist.name %>" value="<%= artist.id %>">
        <% } else { %>
            <option label="<%= artist.name %>" value="<%= artist.id %>">
        <% } %>
    <% }) %>
    </select>
</div>
<div>
    <label>Albums</label>
    <select name="album">
    <% albums.forEach(album => { %>
        <% if (album.id === track.album) { %>
            <option selected label="<%= album.name %>" value="<%= album.id %>">
        <% } else { %>
            <option label="<%= album.name %>" value="<%= album.id %>">
        <% } %>
    <% }) %>
    </select>
</div>
<div>
    <label>Genre</label>
    <select name="genre">
    <% genres.forEach(genre => { %>
        <% if (genre.id === track.genre) { %>
            <option selected label="<%= genre.name %>" value="<%= genre.id %>">
        <% } else { %>
            <option label="<%= genre.name %>" value="<%= genre.id %>">
        <% } %>
    <% }) %>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" 
        value="<%= track.publishDate == null ? '' : 
        track.publishDate.toISOString().split('T')[0] %>">
</div>

